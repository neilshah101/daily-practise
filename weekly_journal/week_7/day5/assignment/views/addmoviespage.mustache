<html>
  <head>
     <title>add movies</title>
  </head>
  <body>
      <div>
        <h1>add movies</h1>
      </div>
      <div>
      <button><a href="/chat">live chat</a></button>
      </div>
      <div>
      <button><a href="/movies">see all movies</a></button>
      <div>

      {{message}}
      <div>
         <form method="post" action="/movies/movie-post"> 
              <div>
                  <input type='hidden' name='username' value={{username}}>
                  <input type="text" name="title" placeholder="title of the movie">
              </div>
              <div>
                  <input type="text" name="description" placeholder="description of the movie">
              </div>
              <div>
                  <input type="text" name="genre" placeholder="genre of the movie">
              </div>
              <div>
                  <input type="text" name="posterurl" placeholder="url of the movie poster">
              </div>
              <div>
                  <button>submit</button>
              </div>
         </form>
      <div>
      
      <div>
        <button><a href="/home/logout">logout</a></button>
      </div>
      

  </body>
</html>

<html>
  <head> 
     <title>Movies</title>
  </head>
  <body>
      <div>
          <h1>All movies for {{name}}</h1>
      </div>
      <div>
      <button><a href="/chat">live chat</a></button>
      </div>
      <div >
         <button ><a href="/addmovie">Add New Movie</a></button>
      </div>
      <div>
          {{#allmovies}}
          <form method="post" action="/movies/delete">
             <input type='hidden' name='id' value={{id}}>
             <input type='hidden' name='username' value={{username}}>


             <div>
                 <h2>{{title}}</h2>
              </div>
              <div>
                 <img src="{{image}}"/>
              </div>
              <div>
                 <h3>description :{{description}}</h3>
              </div>
              <div>
                 <h3>genre:{{genre}}</h3>
              </div>
              <div>
                 <a href="/movies/{{id}}">more info</a>
              </div> 
              <div>
                 <a href="/movies/genre/{{genre}}">more movies from this genre</a>
              </div>

              <button>delete movie</button>
          </form>
          {{/allmovies}}
      </div>
      <div>
        <button><a href="/home/logout">logout</a></button>
      </div>
  </body>
</html>








